!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %table
      %thead
        %tr
          %th Name
          / %th Actions
      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            / %td
            /   = link_to 'Edit', edit_article_category_path(@article.id, category.id)
            /   = link_to 'Delete', article_category_path(@article.id, category.id), method: :delete, data: {confirm: "Are you sure"}
            

