= form_with(model: @article, local: true) do |form|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this @article from being saved:
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message
  .bg-white.w-full.shadow.rounded-lg.p-5
    .w-full.flex.flex-row.flex-wrap.mt-3
      %div{:class => "w-1/2 pr-2"}
        = form.text_field :title, :placeholder => 'Title', :class => 'w-full p-2 rounded-lg bg-gray-200 shadow border'
      %div{:class => "w-1/2 pr-2"}
        = form.text_field :author, :placeholder => 'Author', :class => 'w-full p-2 rounded-lg bg-gray-200 shadow border'
    .w-full.flex.flex-row.flex-wrap.mt-3
      = form.text_area :content, :class => "bg-gray-200 w-full rounded-lg shadow border p-2", :placeholder => "Write some content", rows: "5"
    .w-full.flex.flex-row.flex-wrap.mt-3
      = form.submit 'Create', :class => "w-full flex-shrink-0 bg-blue-500 hover:bg--blue hover:opacity-75 transition-opacity duration-200 text-sm text-white py-1 px-12 rounded cursor-pointer"
  