<html>
  <head>
    <style>
      table {
        border-collapse: collapse;
      }
      td, th {
        border: 1px solid black;
        padding: 1em;
      }
    </style>
  </head>
  <body>
    <p id="notice"><%= notice %></p>

    <h1>Articles</h1>
    <button><%= link_to 'New Article', "/articles/new" %></button><br><br>
    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Content</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |x| %>
          <tr>
            <td><%= x.title %></td>
            <td><%= x.author %></td>
            <td><%= x.content %></td>
            <td>
              <%= link_to 'Show', x%>
              <%= link_to 'Edit', edit_article_path(x)%>
              <%= link_to 'Delete'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </body>
</html>
