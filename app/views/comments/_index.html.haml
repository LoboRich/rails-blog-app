!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %table
      %thead
        %tr
          %th Content
          %th
          %th Actions
      %tbody
        - @comments.each do |comment|
          %tr
            %td= comment.content
            %td= comment.id
            %td
              = link_to 'Edit', edit_article_comment_path(@article.id, comment.id)
              = link_to 'Delete', article_comment_path(@article.id, comment.id), method: :delete, data: {confirm: "Are you sure"}
            

